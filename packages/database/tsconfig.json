{
  "compilerOptions": {
    "types": ["node"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
