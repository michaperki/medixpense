{
  "name": "medixpense-modern",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"API,WEB\" -c \"blue.bold,green.bold\" \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:database && npm run build:api && npm run build:web",
    "build:database": "cd packages/database && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:database && npm run test:api && npm run test:web",
    "test:database": "cd packages/database && npm test",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^8.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7"
  },
  "dependencies": {
    "tsconfig-paths": "^4.2.0"
  }
}
